infralet ask \
    RCLONE_SYNC_SOURCE \
    "/backup/repository" \
    "What is the source folder to sync from?"

infralet ask \
    RCLONE_SYNC_DESTINATION \
    "backblaze:bucket" \
    "What is the Rclone files destination?"

infralet info "Synchronizing $RCLONE_SYNC_SOURCE to $RCLONE_SYNC_DESTINATION"

rclone sync \
    --progress \
    --transfers 16 \
    --exclude 'cache/**' \
    --exclude 'node_modules/**' \
    "$RCLONE_SYNC_SOURCE" \
    "$RCLONE_SYNC_DESTINATION"