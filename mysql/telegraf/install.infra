infralet only_sudo

# Add MySQL
infralet ask_yes_no \
    TELEGRAF_INPUT_MYSQL \
    "N" \
    "Do you want to input MySQL on Telegraf?"

if [ $TELEGRAF_INPUT_MYSQL == "Y" ]; then

    infralet ask \
        MYSQL_USER \
        "admin" \
        "What is the MySQL user?"

    infralet ask \
        MYSQL_PASSWORD \
        "" \
        "What is the MySQL password?"

    infralet copy mysql.conf /etc/telegraf/telegraf.d/mysql.conf

fi
