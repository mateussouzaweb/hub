infralet only_sudo

# Install
apt install -y borgbackup

# Init repository
infralet ask \
    BORG_REPOSITORY \
    "/backup/repository" \
    "What is the Borg repository folder?"

infralet ask \
    BORG_PASSPHRASE \
    "" \
    "What is the Borg passphrase?"

infralet info "Creating borg backup repository on $BORG_REPOSITORY"

mkdir -p "$BORG_REPOSITORY"

borg init \
    --encryption=repokey-blake2 \
    $BORG_REPOSITORY
